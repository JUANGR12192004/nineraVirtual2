# Clave secreta de Django (reemplazar por una segura)
DJANGO_SECRET_KEY=changeme-super-secret

# Depuración y opciones de seguridad
DJANGO_DEBUG=True
DJANGO_SECURE_SSL_REDIRECT=False

# Configuración de base de datos (por defecto SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Hosts y orígenes confiables (Render completa RENDER_EXTERNAL_URL automáticamente)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=
RENDER_EXTERNAL_URL=

# Directorios para modelos y archivos subidos
MODEL_DIR=../ml_models
MEDIA_ROOT=./media

# Base de datos legacy (formulario web + GUI)
LEGACY_DB_PATH=
